<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ConvertCoinPage"
    x:Class="ShellNavProtoMaui.Views.Tabs.CoinTransaction.ConvertCoinPage"
    x:Name="ConvertCoinsPageRoot">


    <VerticalStackLayout BackgroundColor="Blue">
        <Label 
            Text="Submit coin amount and destination coin wallet"
            LineBreakMode="WordWrap"
            HorizontalTextAlignment="Center"
            TextColor="White"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="Submit"
            FontSize="24"
            TextColor="White"
            BorderColor="White"
            BackgroundColor="Transparent"
            Command="{
                Binding
                     Path=SubmitButtonTappedCommand
                   , Source={x:Reference ConvertCoinsPageRoot}
            }"
        />

    </VerticalStackLayout>
</ContentPage>
